@{
    Layout = "_Form";
    ViewData["Title"] = "Add Story";
}

<h1 class="display-5">Add Story</h1>

<form method="post">
    <div class="form-group">
        <label class="col-form-label" for="text">Story Text</label>
        <textarea name="text" type="text" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label class="col-form-label" for="pubDate">Date Published</label>
        <input name="pubDate" type="text" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary btn-lg" value="Add Story" />
</form>
