@{
    Layout = "_Form";
    ViewData["Title"] = "AddBook";
}

<h1 class="display-5">Add Book</h1>

<form method="post">
    <div class="form-group">
        <label class="col-form-label" for="title">Title</label>
        <input name="title" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label class="col-form-label" for="pubDate">Date Published</label>
        <input name="pubDate" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label class="col-form-label" for="bookId">Book ID</label>
        <input name="bookId" type="text" class="form-control">
    </div>

    <input type="submit" class="btn btn-primary btn-lg" value="Add Book"/>
</form>
